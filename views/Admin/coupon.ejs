<%- include('includes/_header') %>
    <link rel="stylesheet" href="/css/vertical-layout-light/product.css">

    <body>
        <div class="container-scroller">
            <!-- partial:partials/_navbar.html -->
            <%- include('includes/_header_navbar') %>
                <!-- partial -->
                <div class="container-fluid page-body-wrapper">

                    <nav class="sidebar sidebar-offcanvas" id="sidebar">
                        <ul class="nav">
                            <li class="nav-item">
                                <a class="nav-link" href="/Admin/home">
                                    <i class="icon-grid menu-icon"></i>
                                    <span class="menu-title">Dashboard</span>
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" data-toggle="collapse" href="#orders" aria-expanded="false"
                                    aria-controls="ui-basic">
                                    <i class="icon-book-open menu-icon"></i>
                                    <span class="menu-title">Orders</span>
                                    <i class="menu-arrow"></i>
                                </a>
                                <div class="collapse" id="orders">
                                    <ul class="nav flex-column sub-menu">
                                        <li class="nav-item"> <a class="nav-link" href="/Admin/pendingOrders">Pending
                                                Orders</a></li>
                                        <li class="nav-item"> <a class="nav-link" href="/Admin/orderProgress">Order
                                                Progress</a></li>
                                        <li class="nav-item"> <a class="nav-link"
                                                href="/Admin/completedOrders">Completed
                                                Orders</a></li>
                                    </ul>
                                </div>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" data-toggle="collapse" href="#ui-basic" aria-expanded="false"
                                    aria-controls="ui-basic">
                                    <i class="icon-screen-desktop menu-icon"></i>
                                    <span class="menu-title">Products</span>
                                    <i class="menu-arrow"></i>
                                </a>
                                <div class="collapse" id="ui-basic">
                                    <ul class="nav flex-column sub-menu">
                                        <li class="nav-item"> <a class="nav-link" href="/Admin/viewProducts">View
                                                Products</a></li>
                                        <li class="nav-item"> <a class="nav-link" href="/Admin/addProducts">Add
                                                Products</a></li>
                                    </ul>
                                </div>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="/Admin/Category">
                                    <i class=" icon-direction menu-icon"></i>
                                    <span class="menu-title">Category</span>
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" data-toggle="collapse" href="#offers" aria-expanded="false"
                                    aria-controls="offers">
                                    <i class="icon-badge menu-icon"></i>
                                    <span class="menu-title">Offers</span>
                                    <i class="menu-arrow"></i>
                                </a>
                                <div class="collapse" id="offers">
                                    <ul class="nav flex-column sub-menu">
                                        <li class="nav-item"> <a class="nav-link" href="/Admin/productOffers">Product
                                                Offers</a></li>
                                        <li class="nav-item"> <a class="nav-link" href="/Admin/categoryOffers">Category
                                                Offers</a></li>
                                    </ul>
                                </div>
                            </li>
                            <li class="nav-item active">
                                <a class="nav-link" href="/Admin/Coupons">
                                  <i class="fa fa-money menu-icon"></i>
                                  <span class="menu-title">Coupons</span>
                                </a>
                              </li>
                            <li class="nav-item">
                                <a class="nav-link" href="/Admin/viewCustomer">
                                    <i class="icon-people menu-icon"></i>
                                    <span class="menu-title">Customers</span>
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="/Admin/salesReportToday">
                                    <i class=" icon-basket menu-icon"></i>
                                    <span class="menu-title">Sales</span>
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="">
                                    <i class=" icon-notebook menu-icon"></i>
                                    <span class="menu-title">Report</span>
                                </a>
                            </li>
                        </ul>
                    </nav>
                    <!-- partial -->
                    <div class="main-panel">
                        <div class="content-wrapper">
                            <div class="row">
                                <div class="col-12 col-xl-8 mb-4 mb-xl-0">
                                    <h3 class="font-weight-bold">Generate Coupon
                                    </h3>
                                    <h6 class="font-weight-normal mb-4">Generate a coupon offer.</h6>
                                </div>
                            </div>
                            <% if(couponAdded) { %>
                                <div class="form-group">
                                    <div class="alert alert-success" role="alert">
                                        Coupon Offer Added Successfully
                                    </div>
                                </div>
                            <% } %>
                            <% if(couponExists) { %>
                                <div class="form-group">
                                    <div class="alert alert-warning" role="alert">
                                        Coupon Offer already exists!!!
                                    </div>
                                </div>
                            <% } %>
                            <% if(couponUpdated) { %>
                                <div class="form-group">
                                    <div class="alert alert-success" role="alert">
                                        Coupon Offer Updated Successfully
                                    </div>
                                </div>
                            <% } %>
                            <% if(couponDeleted) { %>
                                <div class="form-group">
                                    <div class="alert alert-danger" role="alert">
                                        Coupon Offer Deleted Successfully
                                    </div>
                                </div>
                            <% } %>
                            <div class="row">
                                <% if(isUpdate) { %>
                                    <form class="forms-sample" id="editCoupon" style="display: contents;"
                                        action="/Admin/couponEdit" method="post">
                                        <div class="col-md-12 grid-margin stretch-card">
                                            <div class="card">
                                                <div class="card-body">
                                                    <div class="form-group">
                                                        <label for="exampleInputEmail1">Coupon Name</label>
                                                        <input type="text" class="form-control form-control-sm"
                                                            name="Coupon_name" id="Coupon_name" value="<%= couponData[0].Coupon_name %>"
                                                            placeholder="Enter Coupon Name">
                                                        <input type="hidden" name="coupon_id" value="<%= couponData[0]._id %>">
                                                    </div>
                                                    <div class="form-group">
                                                        <label for="exampleInputEmail1">Coupon
                                                            Offer in % </label>
                                                        <input type="text" class="form-control form-control-sm"
                                                            name="Offer_Percentage" id="Offer_Percentage" value="<%= couponData[0].Offer_Percentage %>"
                                                            placeholder="Enter Category Offer">
                                                    </div>
                                                </div>
                                                <button type="submit" class="btn btn-primary"
                                                    style="border-radius: 0px 0px 14px 14px;">Edit
                                                    Coupon</button>
                                            </div>
                                        </div>
                                    </form>
                                <% } else { %>
                                    <form class="forms-sample" id="addCoupon" style="display: contents;"
                                        action="/Admin/coupon" method="post">
                                        <div class="col-md-12 grid-margin stretch-card">
                                            <div class="card">
                                                <div class="card-body">
                                                    <div class="form-group">
                                                        <label for="exampleInputEmail1">Coupon Name</label>
                                                        <input type="text" class="form-control form-control-sm"
                                                            name="Coupon_Name" id="Coupon_Name"
                                                            placeholder="Enter Coupon Name">
                                                    </div>
                                                    <div class="form-group">
                                                        <label for="exampleInputEmail1">Coupon
                                                            Offer in % </label>
                                                        <input type="text" class="form-control form-control-sm"
                                                            name="Coupon_Offer" id="Coupon_Offer"
                                                            placeholder="Enter Coupon Offer">
                                                    </div>
                                                </div>
                                                <button type="submit" class="btn btn-primary"
                                                    style="border-radius: 0px 0px 14px 14px;">Generate
                                                    Coupon</button>
                                            </div>
                                        </div>
                                    </form>
                                <% } %>
                            </div>
                            <div class="col-lg-12 grid-margin stretch-card p-0">
                                <div class="card">
                                    <div class="card-body">
                                        <h4 class="card-title">All Coupons</h4>
                                        <div class="table-responsive">
                                            <table class="table table-striped">
                                                <thead>
                                                    <tr>
                                                        <th>
                                                            Coupon Name
                                                        </th>
                                                        <th>
                                                            Offer Percentage
                                                        </th>
                                                        <th>
                                                            Coupon ID
                                                        </th>
                                                        <th>
                                                            Edit
                                                        </th>
                                                        <th>
                                                            Delete
                                                        </th>
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    <% for(var i=0; i < couponData.length; i++){ %>
                                                        <tr>
                                                            <td>
                                                                <%= couponData[i].Coupon_name %>
                                                            </td>
                                                            <td>
                                                                <%= couponData[i].Offer_Percentage %>
                                                            </td>
                                                            <td>
                                                                <%= couponData[i].Coupon_ID %>
                                                            </td>
                                                            <td>
                                                                <a href="/Admin/couponEdit?coupon_id=<%= couponData[i]._id %>"><label
                                                                        class="badge badge-success" style="cursor: pointer;">Edit</label></a>
                                                            </td>
                                                            <td>
                                                                <input type="hidden" name="id" id="id" value="<%= couponData[i]._id %>">
                                                                <a onclick="showSwal('delete-coupon')"><label
                                                                        class="badge badge-danger" style="cursor: pointer;">Delete</label></a>
                                                            </td>
                                                        </tr>
                                                        <% } %>
                                                </tbody>
                                            </table>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- content-wrapper ends -->
                </div>
                <!-- main-panel ends -->
        </div>


    </body>

    <%- include('includes/_footer') %>