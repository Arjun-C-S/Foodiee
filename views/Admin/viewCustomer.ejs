                <div class="main-panel">
                    <div class="content-wrapper">
                        <div class="col-12 grid-margin" style="padding-left: 0px;padding-right: 0px;">
                            <div class="card">
                              <div class="card-body">
                                <h4 class="card-title">Customer details</h4>
                                <div class="row">
                                  <div class="table-sorter-wrapper col-lg-12 table-responsive">
                                    <table id="sortable-table-2" class="table table-striped">
                                      <thead>
                                        <tr>
                                          <th>#</th>
                                          <th class="sortStyle">Name<i class="ti-angle-down"></i></th>
                                          <th class="sortStyle">@Email<i class="ti-angle-down"></i></th>
                                          <th class="sortStyle">Phone Number<i class="ti-angle-down"></i></th>
                                          <th class="sortStyle">Status<i class="ti-angle-down"></i></th>
                                          <th class="sortStyle">Viewmore</th>
                                        </tr>
                                      </thead>
                                      <tbody>
                                        <% for(var i = 0; i < customer.length; i++) { %>
                                            <tr>
                                                <td><%= i + 1 %></td>
                                                <td><%= customer[i].name %></td>
                                                <td><%= customer[i].email %></td>
                                                <td><%= customer[i].phone %></td>
                                                <% if(customer[i].isBlocked) { %>
                                                    <td>Blocked</td>
                                                <% } else { %>
                                                    <td>Active</td>
                                                <% } %>
                                                <td>
                                                    <a href="/Admin/viewCustomerMore/?id=<%= customer[i]._id %>"><label class="badge badge-success" style="cursor: pointer;">View</label></a>
                                                </td>
                                            </tr>
                                        <% } %>
                                      </tbody>
                                    </table>
                                  </div>
                                </div>
                              </div>
                            </div>
                          </div>
