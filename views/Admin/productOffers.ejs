<%- include('includes/_header') %>
    <link rel="stylesheet" href="/css/vertical-layout-light/product.css">

    <body>
        <div class="container-scroller">
            <!-- partial:partials/_navbar.html -->
            <%- include('includes/_header_navbar') %>
                <!-- partial -->
                <div class="container-fluid page-body-wrapper">

                    <nav class="sidebar sidebar-offcanvas" id="sidebar">
                        <ul class="nav">
                            <li class="nav-item">
                                <a class="nav-link" href="/Admin/home">
                                    <i class="icon-grid menu-icon"></i>
                                    <span class="menu-title">Dashboard</span>
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" data-toggle="collapse" href="#orders" aria-expanded="false"
                                    aria-controls="ui-basic">
                                    <i class="icon-book-open menu-icon"></i>
                                    <span class="menu-title">Orders</span>
                                    <i class="menu-arrow"></i>
                                </a>
                                <div class="collapse" id="orders">
                                    <ul class="nav flex-column sub-menu">
                                        <li class="nav-item"> <a class="nav-link" href="/Admin/pendingOrders">Pending
                                                Orders</a></li>
                                        <li class="nav-item"> <a class="nav-link" href="/Admin/orderProgress">Order
                                                Progress</a></li>
                                        <li class="nav-item"> <a class="nav-link"
                                                href="/Admin/completedOrders">Completed
                                                Orders</a></li>
                                    </ul>
                                </div>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" data-toggle="collapse" href="#ui-basic" aria-expanded="false"
                                    aria-controls="ui-basic">
                                    <i class="icon-screen-desktop menu-icon"></i>
                                    <span class="menu-title">Products</span>
                                    <i class="menu-arrow"></i>
                                </a>
                                <div class="collapse" id="ui-basic">
                                    <ul class="nav flex-column sub-menu">
                                        <li class="nav-item"> <a class="nav-link" href="/Admin/viewProducts">View
                                                Products</a></li>
                                        <li class="nav-item"> <a class="nav-link" href="/Admin/addProducts">Add
                                                Products</a></li>
                                    </ul>
                                </div>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="/Admin/Category">
                                    <i class=" icon-direction menu-icon"></i>
                                    <span class="menu-title">Category</span>
                                </a>
                            </li>
                            <li class="nav-item active">
                                <a class="nav-link" data-toggle="collapse" href="#offers" aria-expanded="false"
                                    aria-controls="offers">
                                    <i class="icon-badge menu-icon"></i>
                                    <span class="menu-title">Offers</span>
                                    <i class="menu-arrow"></i>
                                </a>
                                <div class="collapse" id="offers">
                                    <ul class="nav flex-column sub-menu">
                                        <li class="nav-item"> <a class="nav-link" href="/Admin/productOffers">Product
                                                Offers</a></li>
                                        <li class="nav-item"> <a class="nav-link" href="/Admin/categoryOffers">Category
                                                Offers</a></li>
                                    </ul>
                                </div>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="/Admin/Coupons">
                                  <i class="fa fa-money menu-icon"></i>
                                  <span class="menu-title">Coupons</span>
                                </a>
                              </li>
                            <li class="nav-item">
                                <a class="nav-link" href="/Admin/viewCustomer">
                                    <i class="icon-people menu-icon"></i>
                                    <span class="menu-title">Customers</span>
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="/Admin/salesReportToday">
                                    <i class=" icon-basket menu-icon"></i>
                                    <span class="menu-title">Sales</span>
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="">
                                    <i class=" icon-notebook menu-icon"></i>
                                    <span class="menu-title">Report</span>
                                </a>
                            </li>
                        </ul>
                    </nav>
                    <!-- partial -->
                    <div class="main-panel">
                        <div class="content-wrapper">
                            <div class="row">
                                <div class="col-12 col-xl-8 mb-4 mb-xl-0">
                                    <h3 class="font-weight-bold">Add Product Offer
                                    </h3>
                                    <h6 class="font-weight-normal mb-4">Add a new offer for a selected product.</h6>
                                </div>
                            </div>
                            <% if(productOfferAdded) { %>
                                <div class="form-group">
                                    <div class="alert alert-success" role="alert">
                                        Product Offer Added Successfully
                                    </div>
                                </div>
                            <% } %>
                            <% if(productOfferExists) { %>
                                <div class="form-group">
                                    <div class="alert alert-warning" role="alert">
                                        Product Offer already exists!!!
                                    </div>
                                </div>
                            <% } %>
                            <% if(productOfferUpdated) { %>
                                <div class="form-group">
                                    <div class="alert alert-success" role="alert">
                                        Product Offer Updated Successfully
                                    </div>
                                </div>
                            <% } %>
                            <% if(productOfferDeleted) { %>
                                <div class="form-group">
                                    <div class="alert alert-danger" role="alert">
                                        Product Offer Deleted Successfully
                                    </div>
                                </div>
                            <% } %>
                            <div class="row">
                                <% if(isUpdate) { %>
                                    <form class="forms-sample" id="editProductOffer" style="display: contents;"
                                        action="/Admin/productOffersEdit" method="post">
                                        <div class="col-md-12 grid-margin stretch-card">
                                            <div class="card">
                                                <div class="card-body">
                                                    <div class="form-group">
                                                        <label for="exampleInputPassword1">Select
                                                            Product</label>
                                                        <select class="form-control form-control-sm" id="Product_id"
                                                            name="Product_id">
                                                            <option value="<%= OfferProductData[0].ProductWithOffer._id %>" selected ><%= OfferProductData[0].ProductWithOffer.product_name %></option>
                                                            <% for(var i=0; i < ProductData.length; i++) { %>
                                                                <option value=<%=ProductData[i]._id %> ><%=
                                                                    ProductData[i].product_name %>
                                                                </option>
                                                            <% } %>
                                                        </select>
                                                    </div>
                                                    <div class="form-group">
                                                        <label for="exampleInputEmail1">Product
                                                            Offer in % </label>
                                                        <input type="text" class="form-control form-control-sm"
                                                            name="Offer_Percentage" id="Offer_Percentage" value="<%= OfferProductData[0].Offer_Percentage %>"
                                                            placeholder="Enter Product Offer">
                                                        <input type="hidden" name="id" value="<%= OfferProductData[0]._id %>">
                                                    </div>
                                                </div>
                                                <button type="submit" class="btn btn-primary"
                                                    style="border-radius: 0px 0px 14px 14px;">Edit
                                                    Offer</button>
                                            </div>
                                        </div>
                                    </form>
                                <% } else { %>
                                    <form class="forms-sample" id="addProductOffer" style="display: contents;"
                                        action="/Admin/productOffers" method="post">
                                        <div class="col-md-12 grid-margin stretch-card">
                                            <div class="card">
                                                <div class="card-body">
                                                    <div class="form-group">
                                                        <label for="exampleInputPassword1">Select
                                                            Product</label>
                                                        <select class="form-control form-control-sm" id="Product_name"
                                                            name="Product_name">
                                                            <option value="">---Select---</option>
                                                            <% for(var i=0; i < ProductData.length; i++) { %>
                                                                <option value=<%=ProductData[i]._id %> ><%=
                                                                    ProductData[i].product_name %>
                                                                </option>
                                                                <% } %>
                                                        </select>
                                                    </div>
                                                    <div class="form-group">
                                                        <label for="exampleInputEmail1">Product
                                                            Offer in % </label>
                                                        <input type="text" class="form-control form-control-sm"
                                                            name="Product_Offer" id="Product_Offer"
                                                            placeholder="Enter Product Offer">
                                                    </div>
                                                </div>
                                                <button type="submit" class="btn btn-primary"
                                                    style="border-radius: 0px 0px 14px 14px;">Add
                                                    Offer</button>
                                            </div>
                                        </div>
                                    </form>
                                <% } %>
                            </div>
                            <div class="col-lg-12 grid-margin stretch-card p-0">
                                <div class="card">
                                    <div class="card-body">
                                        <h4 class="card-title">All Product Offers</h4>
                                        <div class="table-responsive">
                                            <table class="table table-striped">
                                                <thead>
                                                    <tr>
                                                        <th>
                                                            Product Name
                                                        </th>
                                                        <th>
                                                            Offer Percentage
                                                        </th>
                                                        <th>
                                                            Edit
                                                        </th>
                                                        <th>
                                                            Delete
                                                        </th>
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    <% for(var i=0; i < OfferProductData.length; i++){ %>
                                                        <tr>
                                                            <td>
                                                                <%= OfferProductData[i].ProductWithOffer.product_name %>
                                                            </td>
                                                            <td>
                                                                <%= OfferProductData[i].Offer_Percentage %>
                                                            </td>
                                                            <td>
                                                                <a href="/Admin/productOffersEdit?offer_id=<%= OfferProductData[i]._id %>"><label
                                                                        class="badge badge-success" style="cursor: pointer;">Edit</label></a>
                                                            </td>
                                                            <td>
                                                                <input type="hidden" name="id" id="id" value="<%= OfferProductData[i]._id %>">
                                                                <a onclick="showSwal('delete-productOffer')"><label
                                                                        class="badge badge-danger" style="cursor: pointer;">Delete</label></a>
                                                            </td>
                                                        </tr>
                                                        <% } %>
                                                </tbody>
                                            </table>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- content-wrapper ends -->
                </div>
                <!-- main-panel ends -->
        </div>


    </body>

    <%- include('includes/_footer') %>