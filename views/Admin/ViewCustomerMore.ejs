                <!-- partial -->
                <div class="main-panel">
                    <div class="content-wrapper">
                        <div class="row">
                            <div class="col-12 col-xl-8 mb-4 mb-xl-0">
                                <h3 class="font-weight-bold"><%= CustomerData[0].name %>'s Profile
                                </h3>
                                <h6 class="font-weight-normal mb-4">Go through <%= CustomerData[0].name %>'s profile and check all the data.</h6>
                            </div>
                        </div>

                        <div class="row">
                            <form class="forms-sample" id="addProductform" style="display: contents;"
                                action="/Customer/editProfile" method="get">
                                <div class="col-md-12 grid-margin stretch-card">
                                    <div class="card">
                                        <div class="card-body">
                                            <div class="col-12 d-flex justify-content-center mt-5">
                                                <div class="col-3">
                                                    <div class="avatar-upload mt-0 mb-0">
                                                        <div class="avatar-preview">
                                                            <% if( CustomerData[0].profile_image ) { %>
                                                                <div id="imagePreview"
                                                                        style="background-image: url('<%= CustomerData[0].profile_image %>');">
                                                                </div>
                                                            <% } else { %>
                                                                <div id="imagePreview"
                                                                        style="background-image: url('https://res.cloudinary.com/dzfyfd5bg/image/upload/v1666961365/defaultProfile-img_zshguv.png');">
                                                                </div>
                                                            <% } %>
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="col-9">
                                                    <div class="form-group">
                                                        <input type="text" class="form-control form-control-sm" disabled
                                                            value="<%= CustomerData[0].name %>">
                                                    </div>
                                                    <div class="form-group">
                                                        <input type="text" class="form-control form-control-sm" disabled
                                                            value="<%= CustomerData[0].email %>">
                                                    </div>
                                                    <div class="form-group">
                                                        <input type="text" class="form-control form-control-sm" disabled
                                                            value="<%= CustomerData[0].phone %>">
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="col-12">
                                                <div class="form-group col-12 mt-4">
                                                    <h4 class="mb-4">Present Address</h4>
                                                    <% for( var i=0; i < CustomerData[0].Address.length; i++ ) {
                                                        if(CustomerData[0].Address[i].isActive===true ) { %>
                                                        <textarea type="text" class="form-control form-control-sm"
                                                            disabled style="white-space: pre-line;" rows="4"><%= CustomerData[0].Address[i].houseName %>
                                                            <%= CustomerData[0].Address[i].phoneNumber %>
                                                            <%= CustomerData[0].Address[i].city %>
                                                            <%= CustomerData[0].Address[i].street %>
                                                    </textarea>
                                                        <% } }%>
                                                </div>
                                            </div>
                                        </div>
                                        <input type="hidden" name="customer_id" id="customer_id" value="<%= CustomerData[0]._id %>">
                                        <% if(CustomerData[0].isBlocked) { %>
                                            <a type="submit" class="btn btn-success" style="border-radius: 0px 0px 14px 14px;" onclick="showSwal('unblock-customer')">UnBlock User</a>
                                        <% } else { %>
                                            <a type="submit" class="btn btn-danger" style="border-radius: 0px 0px 14px 14px;" onclick="showSwal('block-customer')">Block User</a>
                                        <% } %>
                                    </div>
                                </div>
                            </form>
                        </div>
                        
                    </div>
                </div>
            </div>
            <!-- content-wrapper ends -->
        </div>
