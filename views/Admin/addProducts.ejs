<%- include('includes/_header') %>
<link rel="stylesheet" href="/css/vertical-layout-light/product.css">

    <body>
        <div class="container-scroller">
            <!-- partial:partials/_navbar.html -->
            <%- include('includes/_header_navbar') %>
            <!-- partial -->
            <div class="container-fluid page-body-wrapper">
                <!-- partial:partials/_settings-panel.html -->


                <!-- partial -->
                <!-- partial:partials/_sidebar.html -->
                <nav class="sidebar sidebar-offcanvas" id="sidebar">
                    <ul class="nav">
                        <li class="nav-item">
                            <a class="nav-link" href="/Admin/home">
                                <i class="icon-grid menu-icon"></i>
                                <span class="menu-title">Dashboard</span>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" data-toggle="collapse" href="#orders" aria-expanded="false"
                                aria-controls="ui-basic">
                                <i class="icon-book-open menu-icon"></i>
                                <span class="menu-title">Orders</span>
                                <i class="menu-arrow"></i>
                            </a>
                            <div class="collapse" id="orders">
                                <ul class="nav flex-column sub-menu">
                                    <li class="nav-item"> <a class="nav-link" href="/Admin/pendingOrders">Pending
                                            Orders</a></li>
                                    <li class="nav-item"> <a class="nav-link" href="/Admin/orderProgress">Order
                                            Progress</a></li>
                                    <li class="nav-item"> <a class="nav-link" href="/Admin/completedOrders">Completed
                                            Orders</a></li>
                                </ul>
                            </div>
                        </li>
                        <li class="nav-item active">
                            <a class="nav-link" data-toggle="collapse" href="#ui-basic" aria-expanded="false"
                                aria-controls="ui-basic">
                                <i class="icon-screen-desktop menu-icon"></i>
                                <span class="menu-title">Products</span>
                                <i class="menu-arrow"></i>
                            </a>
                            <div class="collapse" id="ui-basic">
                                <ul class="nav flex-column sub-menu">
                                    <li class="nav-item"> <a class="nav-link" href="/Admin/viewProducts">View
                                            Products</a></li>
                                    <li class="nav-item"> <a class="nav-link" href="/Admin/addProducts">Add
                                            Products</a></li>
                                </ul>
                            </div>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/Admin/Category">
                                <i class=" icon-direction menu-icon"></i>
                                <span class="menu-title">Category</span>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" data-toggle="collapse" href="#offers" aria-expanded="false" aria-controls="offers">
                              <i class="icon-badge menu-icon"></i>
                              <span class="menu-title">Offers</span>
                              <i class="menu-arrow"></i>
                            </a>
                            <div class="collapse" id="offers">
                              <ul class="nav flex-column sub-menu">
                                <li class="nav-item"> <a class="nav-link" href="/Admin/productOffers">Product Offers</a></li>
                                <li class="nav-item"> <a class="nav-link" href="/Admin/categoryOffers">Category Offers</a></li>
                              </ul>
                            </div>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/Admin/Coupons">
                              <i class="fa fa-money menu-icon"></i>
                              <span class="menu-title">Coupons</span>
                            </a>
                          </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/Admin/viewCustomer">
                                <i class="icon-people menu-icon"></i>
                                <span class="menu-title">Customers</span>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/Admin/salesReportToday">
                                <i class=" icon-basket menu-icon"></i>
                                <span class="menu-title">Sales</span>
                            </a>
                        </li>
                    </ul>
                </nav>
                <!-- partial -->
                <div class="main-panel">
                    <div class="content-wrapper">
                        <div class="row">
                            <div class="col-12 col-xl-8 mb-4 mb-xl-0">
                                <h3 class="font-weight-bold">Add Product
                                </h3>
                                <h6 class="font-weight-normal mb-4">Add a new product with necessary details</h6>
                            </div>
                        </div>
                        <% if(productAdded) { %>
                            <div class="form-group">
                                <div class="alert alert-success" role="alert">
                                    Product Added Successfully
                                </div>
                            </div>
                        <% } %>
                        <% if(productExists) { %>
                            <div class="form-group">
                                <div class="alert alert-warning" role="alert">
                                    Product Already Exists!!!
                                </div>
                            </div>
                        <% } %>
                        <div class="row">
                            <form class="forms-sample" id="addProductform" style="display: contents;"
                                action="/Admin/addProducts" method="post" enctype="multipart/form-data">
                                <div class="col-md-12 grid-margin stretch-card">
                                    <div class="card">
                                        <div class="card-body">
                                            <p class="card-title mb-2">Add Products</p>
                                            <div class="col-12 d-flex p-0 mb-4">
                                                <div class="col-3 p-0 m-0">
                                                    <div class="avatar-upload mt-0 mb-0">
                                                        <div class="avatar-edit">
                                                            <input type='file' id="imageUpload1"
                                                                name="product_image1"
                                                                accept=".png, .jpg, .jpeg" />
                                                            <label for="imageUpload1"></label>
                                                        </div>
                                                        <div class="avatar-preview">
                                                            <div id="imagePreview1"
                                                                style="background-image: url('https://icon-library.com/images/shopping-cart-icon-png/shopping-cart-icon-png-3.jpg');">
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="col-3">
                                                    <div class="avatar-upload mt-0 mb-0">
                                                        <div class="avatar-edit">
                                                            <input type='file' id="imageUpload2"
                                                                name="product_image2"
                                                                accept=".png, .jpg, .jpeg" />
                                                            <label for="imageUpload2"></label>
                                                        </div>
                                                        <div class="avatar-preview">
                                                            <div id="imagePreview2"
                                                                style="background-image: url('https://icon-library.com/images/shopping-cart-icon-png/shopping-cart-icon-png-3.jpg');">
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="col-3">
                                                    <div class="avatar-upload mt-0 mb-0">
                                                        <div class="avatar-edit">
                                                            <input type='file' id="imageUpload3"
                                                                name="product_image3"
                                                                accept=".png, .jpg, .jpeg" />
                                                            <label for="imageUpload3"></label>
                                                        </div>
                                                        <div class="avatar-preview">
                                                            <div id="imagePreview3"
                                                                style="background-image: url('https://icon-library.com/images/shopping-cart-icon-png/shopping-cart-icon-png-3.jpg');">
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="col-3">
                                                    <div class="avatar-upload mt-0 mb-0">
                                                        <div class="avatar-edit">
                                                            <input type='file' id="imageUpload4"
                                                                name="product_image4"
                                                                accept=".png, .jpg, .jpeg" />
                                                            <label for="imageUpload4"></label>
                                                        </div>
                                                        <div class="avatar-preview">
                                                            <div id="imagePreview4"
                                                                style="background-image: url('https://icon-library.com/images/shopping-cart-icon-png/shopping-cart-icon-png-3.jpg');">
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="form-group">
                                                <label for="exampleInputUsername1">Product Name</label>
                                                <input type="text" class="form-control form-control-sm"
                                                    name="name" id="product_name"
                                                    placeholder="Enter product name" maxlength="20">
                                            </div>
                                            <div class="form-group">
                                                <label for="exampleInputEmail1">Product
                                                    Description</label>
                                                <textarea type="text"
                                                    class="form-control form-control-sm"
                                                    name="description" id="product_description"
                                                    placeholder="Enter product description" rows="3"
                                                    maxlength="150"></textarea>
                                            </div>
                                            <div class="col-md-12 p-0 d-flex justify-content-between">
                                                <div class="form-group col-md-6 p-0">
                                                    <label for="exampleInputPassword1">Select
                                                        Category</label>
                                                    <select class="form-control form-control-sm"
                                                        name="category">
                                                        <option value="">---Select---</option>
                                                        <% for(var i=0; i < category.length; i++) { %>
                                                            <option value=<%=category[i]._id %> ><%=
                                                                    category[i].Category_name %>
                                                            </option>
                                                            <% } %>
                                                    </select>
                                                </div>
                                                <div class="form-group col-md-5 p-0">
                                                    <label for="exampleInputPassword1">Quantity</label>
                                                    <input type="text"
                                                        class="form-control form-control-sm"
                                                        name="quantity" id="product_quantity"
                                                        placeholder="Enter Product Quantity"
                                                        onkeypress='product_quantity_validate(event)'>
                                                </div>
                                            </div>
                                            <div class="form-group">
                                                <label for="">Product
                                                    Price</label>
                                                <input type="text" name="price"
                                                    class="form-control form-control-sm"
                                                    id="product_price"
                                                    onkeypress='product_product_price(event)'
                                                    placeholder="Enter product price">
                                            </div>
                                        </div>
                                        <button type="submit" class="btn btn-success"
                                            style="border-radius: 0px 0px 14px 14px;">Add
                                            Product</button>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
                <!-- content-wrapper ends -->
            </div>
            <!-- main-panel ends -->
        </div>
        <!-- page-body-wrapper ends -->
        <!-- container-scroller -->
        <script src="/js/product.js"></script>
    </body>

    <%- include('includes/_footer') %>