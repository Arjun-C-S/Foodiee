                                                                accept=".png, .jpg, .jpeg" />
                                                            <label for="imageUpload3"></label>
                                                        </div>
                                                        <div class="avatar-preview">
                                                            <div id="imagePreview3"
                                                                style="background-image: url('<%= data[0].product_image[2] %>');">
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="col-3">
                                                    <div class="avatar-upload mt-0 mb-0">
                                                        <div class="avatar-edit">
                                                            <input type='file' id="imageUpload4"
                                                                name="product_image4"
                                                                accept=".png, .jpg, .jpeg" />
                                                            <label for="imageUpload4"></label>
                                                        </div>
                                                        <div class="avatar-preview">
                                                            <div id="imagePreview4"
                                                                style="background-image: url('<%= data[0].product_image[3] %>');">
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="form-group">
                                                <label for="exampleInputUsername1">Product Name</label>
                                                <input type="text" class="form-control form-control-sm" value="<%= data[0].product_name %>"
                                                    name="product_name" id="product_name"
                                                    placeholder="Enter product name" maxlength="20">
                                                    <input type="hidden" class="form-control" value="<%= data[0]._id %>" name="id" id="id">
                                            </div>
                                            <div class="form-group">
                                                <label for="exampleInputEmail1">Product
                                                    Description</label>
                                                <textarea type="text"
                                                    class="form-control form-control-sm"
                                                    name="product_description" id="product_description"
                                                    placeholder="Enter product description" rows="3"
                                                    maxlength="150"><%= data[0].product_description %></textarea>
                                            </div>
                                            <div class="col-md-12 p-0 d-flex justify-content-between">
                                                <div class="form-group col-6 p-0">
                                                    <label >
                                                        Category</label>
                                                        <select class="form-control form-control-sm" name="Category_id">
                                                            <option value="<%=data[0].Result._id %>"><%= data[0].Result.Category_name %></option>
                                                            <% for(var i=0; i < category.length; i++) { %>
                                                                <option value=<%=category[i]._id %> ><%=
                                                                        category[i].Category_name %>
                                                                </option>
                                                                <% } %>
                                                        </select>
                                                </div>
                                                <div class="form-group col-md-5 p-0">
                                                    <label for="exampleInputPassword1">Quantity</label>
                                                    <input type="text" class="form-control form-control-sm"
                                                    name="product_quantity" id="product_quantity"
                                                    value="<%= data[0].product_quantity %>"
                                                    placeholder="Enter Product Quantity" onkeypress='product_quantity_validate(event)' >
                                                </div>
                                            </div>
                                            <div class="form-group">
                                                <label for="">Product
                                                    Price</label>
                                                    <input type="text" name="product_price" class="form-control form-control-sm"
                                                    value="<%= data[0].product_price %>" id="product_price"
                                                    placeholder="Enter product price" onkeypress='product_product_price(event)'>
                                            </div>
                                        </div>
                                        <div class="d-flex justify-content-between p-0">
                                            <div class="col-6 p-0">
                                                <button type="submit" class="btn badge-success mr-2" style="width: 100%;border-radius: 0px 0px 0px 14px;">Update</button>
                                            </div>
                                            <div class="col-6 p-0">
                                                <input type="hidden" name="product_id" id="product_id"
                                                    value="<%= data[0]._id %>">
                                                    <a href="/Admin/viewProductsMore/?product_id=<%= data[0]._id %>" class="btn btn-light" style="width: 100%;border-radius: 0px 0px 14px 0px;">Cancel</a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </form>
                        </div>


