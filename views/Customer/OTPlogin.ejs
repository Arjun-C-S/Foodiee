<%- include('includes/_header') %>

    <body>
        <div class="container-scroller">
            <div class="container-fluid page-body-wrapper full-page-wrapper">
                <div class="content-wrapper d-flex align-items-center auth px-0">
                    <div class="row w-100 mx-0">
                        <div class="col-lg-4 mx-auto">
                            <div class="auth-form-light text-left py-5 px-4 px-sm-5">
                                <div class="brand-logo">
                                    <img src="/img/main_logo.png" style="width: 200px;" alt="logo">
                                </div>
                                <h4>Enter OTP</h4>
                                <h6 class="font-weight-light">OTP has been sent to your phone.</h6>
                                <form class="pt-3" id="OTPlogin" action="/Customer/OTPlogin"
                                    method="POST">
                                    <div class="form-group">
                                        <input type="hidden" name="phone" id="phone" value="<%= phoneNumber %>" class="form-control form-control-lg">
                                        <input type="hidden" name="email" id="email" value="<%= email %>" class="form-control form-control-lg">
                                        <input type="text" name="otp" id="otp" class="form-control form-control-lg">
                                    </div>
                                    <div class="mt-3">
                                        <button
                                            class="btn btn-block btn-primary btn-lg font-weight-medium auth-form-btn">Submit</button>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <%- include('includes/_footer') %>