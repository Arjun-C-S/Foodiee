<%- include('includes/_header') %>

    <body>
        <div class="container-scroller">
            <div class="container-fluid page-body-wrapper full-page-wrapper">
                <div class="content-wrapper d-flex align-items-center auth px-0">
                    <div class="row w-100 mx-0">
                        <div class="col-lg-4 mx-auto">
                            <div class="auth-form-light text-left py-5 px-4 px-sm-5">
                                <div class="brand-logo">
                                    <img src="/img/main_logo.png" style="width: 200px;" alt="logo">
                                </div>
                                <h4>Enter Contact Details</h4>
                                <h6 class="font-weight-light">Please enter your registered phone number and email.</h6>
                                <form class="pt-3" id="ForgotPhoneForm" action="/Customer/OTPlogin/ConfirmContact"
                                    method="POST">
                                    <% if(invalidPhoneNumber) { %>
                                        <div class="form-group">
                                          <div class="alert alert-danger" role="alert">
                                            Phone number or Email not registered
                                          </div>
                                        </div>
                                      <% } %>
                                      <div class="form-group">
                                        <input type="email" name="email" id="email" class="form-control form-control-lg" placeholder="Enter registerd Email">
                                    </div>
                                    <div class="form-group">
                                        <input type="text" name="phone" id="phone" class="form-control form-control-lg" placeholder="Enter registerd phone number">
                                    </div>
                                    <div class="mt-3">
                                        <button
                                            class="btn btn-block btn-primary btn-lg font-weight-medium auth-form-btn">Continue</button>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <%- include('includes/_footer') %>