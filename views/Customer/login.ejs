<%- include('includes/_header') %>

<body>
  <div class="container-scroller">
    <div class="container-fluid page-body-wrapper full-page-wrapper">
      <div class="content-wrapper d-flex align-items-center auth px-0">
        <div class="row w-100 mx-0">
          <div class="col-lg-4 mx-auto">
            <div class="auth-form-light text-left py-5 px-4 px-sm-5">
              <div class="brand-logo">
                <img src="/img/main_logo.png" style="width: 200px;" alt="logo">
              </div>
              <h4>Hello! let's get started</h4>
              <h6 class="font-weight-light">Sign in to continue.</h6>
              <form class="pt-3" id="loginForm" action="/Customer/home" method="POST">
                <% if(accountCreated) { %>
                  <div class="form-group">
                    <div class="alert alert-success" role="alert">
                      Account Created Successfully
                    </div>
                  </div>
                <% } %>
                <% if(invalidCredentials) { %>
                  <div class="form-group">
                    <div class="alert alert-danger" role="alert">
                      Invalid Username or password!!!
                    </div>
                  </div>
                <% } %>
                <div class="form-group">
                  <input type="email" name="email" id="email" class="form-control form-control-lg" id="exampleInputEmail1" placeholder="Email">
                </div>
                <div class="form-group">
                  <input type="password" id="password" name="password" class="form-control form-control-lg" id="exampleInputPassword1" placeholder="Password">
                </div>
                <div class="mt-3">
                  <button class="btn btn-block btn-primary btn-lg font-weight-medium auth-form-btn" >SIGN IN</button>
                </div>
                <div class="text-center mt-4 font-weight-light">
                  Don't have an account? <a href="/Customer/signUp" class="text-primary">Create</a>
                </div>
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

<%- include('includes/_footer') %>

