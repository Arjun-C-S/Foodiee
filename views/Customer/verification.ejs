<%- include('includes/_header') %>

<body>
  <div class="container-scroller">
    <div class="container-fluid page-body-wrapper full-page-wrapper">
      <div class="content-wrapper d-flex align-items-center auth px-0">
        <div class="row w-100 mx-0">
          <div class="col-lg-4 mx-auto">
            <div class="auth-form-light text-left py-5 px-4 px-sm-5">
              <div class="brand-logo">
                <img src="/img/main_logo.png" style="width: 200px;" alt="logo">
              </div>
              <h4>You are almost there!</h4>
              <h6 class="font-weight-light">Enter OTP here</h6>
              <form class="pt-3" id="OTPForm" action="/Customer/verification" method="POST">
                <% if(invalidOTP) { %>
                  <div class="form-group">
                    <div class="alert alert-danger" role="alert">
                      Invalid OTP try again!!!
                    </div>
                  </div>
                <% } %>
                <div class="form-group">
                    <input type="text" name="phone" id="phone" class="form-control form-control-lg" value="<%= phone_number %>" readonly hidden>
                </div>
                <div class="form-group">
                  <input type="email" name="email" id="email" class="form-control form-control-lg" value="<%= email %>" readonly hidden>
                </div>
                <div class="form-group">
                  <input type="text" name="otp" id="otp" class="form-control form-control-lg" placeholder="Enter OTP">
                </div>
                <div class="mt-3">
                  <button class="btn btn-block btn-primary btn-lg font-weight-medium auth-form-btn" >Verify</button>
                </div>
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

<%- include('includes/_footer') %>

