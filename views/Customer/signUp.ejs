
<%- include('includes/_header') %>

<body>
    <div class="container-scroller">
      <div class="container-fluid page-body-wrapper full-page-wrapper">
        <div class="content-wrapper d-flex align-items-center auth px-0">
          <div class="row w-100 mx-0">
            <div class="col-lg-4 mx-auto">
              <div class="auth-form-light text-left py-5 px-4 px-sm-5">
                <div class="brand-logo">
                  <img src="/img/main_logo.png" style="width: 200px;" alt="logo">
                </div>
                <h4>New here?</h4>
                <h6 class="font-weight-light">Signing up is easy. It only takes a few steps</h6>
                <form class="pt-3" id="signupForm" name="signupForm" method="POST" action="/Customer/signUp">
                  <% if(emailExists) { %>
                    <div class="form-group">
                      <div class="alert alert-danger" role="alert">
                        Email Already Exists!!!
                      </div>
                    </div>
                  <% } %>
                  <div class="form-group">
                    <input type="text" id="name" name="name" class="form-control form-control-lg" placeholder="Username" value="">
                  </div>
                  <div class="form-group">
                    <input type="email" id="email" name="email" class="form-control form-control-lg" placeholder="Email">
                  </div>
                  <div class="form-group">
                    <input type="text" id="phone" name="phone" class="form-control form-control-lg" placeholder="Phone">
                  </div>
                  <div class="form-group">
                    <input type="password" id="password" name="password" class="form-control form-control-lg" placeholder="Password">
                  </div>
                  <div class="mt-3">
                    <button class="btn btn-block btn-primary btn-lg font-weight-medium auth-form-btn" type="submit" >SIGN UP</button>
                  </div>
                  <div class="text-center mt-4 font-weight-light">
                    Already have an account? <a href="/" class="text-primary">Login</a>
                  </div>
                </form>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

<%- include('includes/_footer') %>
